<Pane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.corporate.hellscape.JavaFXController">
   <children>
      <VBox layoutX="950.0" layoutY="10.0" prefHeight="580.0" prefWidth="320.0">
         <children>
            <Label alignment="CENTER" prefHeight="24.0" prefWidth="477.0" text="Health" textAlignment="CENTER">
               <font>
                  <Font name="Microsoft PhagsPa Bold" size="25.0" />
               </font>
            </Label>
            <ProgressBar fx:id="healthBar" prefHeight="30.0" prefWidth="475.0" progress="0.0" />
            <HBox prefHeight="35.0" prefWidth="475.0">
               <children>
                  <Label alignment="CENTER" prefHeight="20.0" prefWidth="300.0" text="Hunger">
                     <font>
                        <Font name="Microsoft PhagsPa Bold" size="20.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="300.0" text="Stress">
                     <font>
                        <Font name="Microsoft PhagsPa Bold" size="20.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="25.0" prefWidth="475.0">
               <children>
                  <ProgressBar fx:id="hungerBar" prefHeight="20.0" prefWidth="300.0" progress="0.0">
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </ProgressBar>
                  <ProgressBar fx:id="stressBar" prefHeight="20.0" prefWidth="300.0" progress="0.0">
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </ProgressBar>
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="475.0">
               <children>
                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="300.0" text="Stamina">
                     <font>
                        <Font name="Microsoft PhagsPa Bold" size="20.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="300.0" text="Hygiene">
                     <font>
                        <Font name="Microsoft PhagsPa Bold" size="20.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="25.0" prefWidth="200.0">
               <children>
                  <ProgressBar fx:id="staminaBar" prefHeight="20.0" prefWidth="300.0" progress="0.0">
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </ProgressBar>
                  <ProgressBar fx:id="hygieneBar" prefHeight="20.0" prefWidth="300.0" progress="0.0">
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </ProgressBar>
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="475.0">
               <children>
                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="300.0" text="Fun">
                     <font>
                        <Font name="Microsoft PhagsPa Bold" size="20.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="300.0" text="Work Load">
                     <font>
                        <Font name="Microsoft PhagsPa Bold" size="20.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="25.0" prefWidth="475.0">
               <children>
                  <ProgressBar fx:id="funBar" prefHeight="20.0" prefWidth="300.0" progress="0.0">
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </ProgressBar>
                  <ProgressBar fx:id="workLoadBar" prefHeight="20.0" prefWidth="300.0" progress="0.0">
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </ProgressBar>
               </children>
            </HBox>
            <Button fx:id="saveGameButton" mnemonicParsing="false" onAction="#saveGameButtonClicked" prefHeight="70.0" prefWidth="244.0" text="Save Game">
               <font>
                  <Font name="Microsoft PhagsPa Bold" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets left="37.5" right="37.5" top="50.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="exitGameButton" mnemonicParsing="false" onAction="#exitGameButtonClicked" prefHeight="70.0" prefWidth="245.0" text="Exit Game">
